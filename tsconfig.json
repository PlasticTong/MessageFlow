{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true// ts支持js
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts","src/**/*.vue", "src/main.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
